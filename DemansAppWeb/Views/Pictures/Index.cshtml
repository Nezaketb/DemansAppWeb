@{
    ViewData["Title"] = "Pictures Page";
}

@section css{
    <style type="text/css">
    .button-style{
      background-color:#ED5E31 !important;
      border-color:#ED5E31 !important;
      color:white !important;
    }

    .dbutton-style{
      background-color:white !important;
      color:#ED5E31 !important;
      border-color:#ED5E31 !important;

    }
    </style>
}
<div class="container p-5">
     <div class="card">
           <div class="card-header">
                <h4 class="card-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Galeri</font></font></h4>
           </div><!--end card-header-->
     </div>
         <div class="card">
              <div class="card-header">
                   <h4 class="card-title">Resim yükleyin.</h4>
              </div><!--end card-header-->
              <div class="card-body">        
                   <textarea class="form-control" rows="3" id="clipboardTextarea" placeholder="Resim açıklaması giriniz"></textarea>
                    <div class="mt-3">
                         <button type="button" class="btn btn-outline-secondary button-style" data-clipboard-action="copy" data-clipboard-target="#clipboardTextarea"><i class="far fa-image me-2"></i>Resim seç</button>
                         <button type="button" class="btn btn-outline-secondary dbutton-style" data-clipboard-action="cut" data-clipboard-target="#clipboardTextarea"><i class="fas fa-cloud-download-alt me-2"></i>Yükle</button>
                    </div>                                       
              </div><!--end card-body-->
         </div>
</div>