@{
    ViewData["Title"] = "ProfileDetails Page";
}

@section css{
    <style type="text/css">
    .button-style{
      background-color:#ED5E31 !important;
      border-color:#ED5E31 !important;
    }

    .dbutton-style{
      background-color:white !important;
      color:#ED5E31 !important;
    }
    </style>
}
    <div class="container p-5">
        <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Profil Detay</font></font></h4>
                                    <p class="text-muted mb-0"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Hasta profilinizi oluşturun.</font></font></p> 
                                </div><!--end card-header-->
                                <div class="card-body">
                                    <form>
                                        <div class="mb-3 row">
                                                <label for="example-text-input" class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Adı</font></font></label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" placeholder="Ad" id="example-text-input">
                                                </div>
                                            </div>
                                        <div class="mb-3 row">
                                                <label for="example-text-input" class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Soyadı</font></font></label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" placeholder="Soyad" id="example-text-input">
                                                </div>
                                            </div>
                                        <div class="mb-3 row">
                                                <label class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Cinsiyet</font></font></label>
                                                <div class="col-sm-10">
                                                    <select class="form-select" aria-label="Varsayılan seçim örneği">
                                                        <option selected=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Seçiniz</font></font></option>
                                                        <option value="1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kadın</font></font></option>
                                                        <option value="2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Erkek</font></font></option>
                                                      </select>
                                                </div>
                                            </div>
                                        <div class="mb-3 row">
                                                <label for="example-tel-input" class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Telefon</font></font></label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="tel" placeholder="1-(555)-555-5555" id="example-tel-input">
                                                </div>
                                            </div>
                                        <div class="mb-3 row">
                                                <label class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ülke</font></font></label>
                                                <div class="col-sm-10">
                                                    <select class="form-select" aria-label="Varsayılan seçim örneği">
                                                        <option selected=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Seçiniz</font></font></option>
                                                        <option value="1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Bir</font></font></option>
                                                        <option value="2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">İki</font></font></option>
                                                        <option value="3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Üç</font></font></option>
                                                      </select>
                                                </div>
                                            </div>
                                        <div class="mb-3 row">
                                                <label class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">İl</font></font></label>
                                                <div class="col-sm-10">
                                                    <select class="form-select" aria-label="Varsayılan seçim örneği">
                                                        <option selected=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Seçiniz</font></font></option>
                                                        <option value="1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Bir</font></font></option>
                                                        <option value="2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">İki</font></font></option>
                                                        <option value="3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Üç</font></font></option>
                                                      </select>
                                                </div>
                                            </div>
                                        <div class="mb-3 row">
                                                <label class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">İlçe</font></font></label>
                                                <div class="col-sm-10">
                                                    <select class="form-select" aria-label="Varsayılan seçim örneği">
                                                        <option selected=""><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Seçiniz</font></font></option>
                                                        <option value="1"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Bir</font></font></option>
                                                        <option value="2"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">İki</font></font></option>
                                                        <option value="3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Üç</font></font></option>
                                                      </select>
                                                </div>
                                            </div>
                                          <div class="mb-3 row">
                                                <label for="example-text-input" class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Mahalle</font></font></label>
                                                <div class="col-sm-10">
                                                    <input class="form-control" type="text" placeholder="Ad" id="example-text-input">
                                                </div>
                                            </div>
                                           <div class="mb-3 row">
                                                <label for="example-text-input" class="col-sm-2 form-label align-self-center mb-lg-0 text-end"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Adres</font></font></label>
                                                <div class="col-sm-10">
                                                    <textarea class="form-control" rows="5" id="message"></textarea>
                                                </div>
                                            </div>
                                            <div class="col-sm-10 ms-auto">
                                        <button type="submit" class="btn btn-primary button-style"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Değişiklikleri Kaydet</font></font></button>
                                        <button type="button" class="btn btn-danger dbutton-style"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Değişikliklerden vazgeç</font></font></button>
                                            </div>

                                    </form>                                           
                                </div><!--end card-body-->
                            </div>
                            </div>